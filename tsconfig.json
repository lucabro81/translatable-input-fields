{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "declaration": false,
    "removeComments": false,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "package",
    "baseUrl": ".",
    "typeRoots": [ "node_modules/@types" ],
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/components/**/*.ts",
    "src/components/**/*.tsx",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "src/typings.d.ts",
    "src/shim.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
  